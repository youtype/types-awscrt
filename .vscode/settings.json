{
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "files.exclude": {
        ".venv": true,
        ".mypy_cache": true,
        ".ruff_cache": true,
        "build": true,
        "dist": true,
        "*.egg-info": true,
    }
}